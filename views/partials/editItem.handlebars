<div class="border shadow-sm m-10">
  <div class="text-2xl p-3 mt-0 bg-darkGrayishBlue">
      {{restaurant_name}}
  </div>
  <ul class="flex flex-col md:flex-row md:gap-4 text-right m-5">
        <li class=" flex-grow text-left">
            <a href="{{restaurant_url}}">
            {{restaurant_url}}
            </a>
            <div class="">
                {{restaurant_description}}
            </div>
            <div class="">
                {{format_date createdAt}}
            </div>
        </li>
        <li class="m-3">
            Rating 
        </li>
   </ul>
  <ul class="flex flex-col md:flex-row md:gap-4 text-right m-5 justify-end">
    <a href="/restaurant/view/{{id}}"><li class="border p-3 bg-darkGrayishBlue hover:bg-slate-300 hover:text-cyan-50 text-center cursor-pointer">
      View
    </li></a>
    <a href="/dashboard/restaurant/edit/{{id}}"><li class="border p-3 bg-darkGrayishBlue hover:bg-slate-300 hover:text-cyan-50 text-center cursor-pointer">
      Edit
    </li></a>
    <a id="delete-restaurant" ><li data-id="{{id}}"class="border p-3 bg-darkGrayishBlue hover:bg-slate-300 hover:text-cyan-50 text-center cursor-pointer">
      Delete
    </li></a>
  </ul>
</div>