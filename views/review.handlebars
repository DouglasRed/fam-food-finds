<div class="flex items-center">
  <div class="flex-1 max-w-4xl mx-auto p-10">
    <ul class="grid grid-cols-1 gap-4 md:grid-cols-3 md:gap-8">
      <li class="md:col-span-2 bg-white rounded-lg shadow border">
        <div class="">
          <div class="restaurant_name">
            <p>{{ reviewPost.restaurant_name}}</p>
          </div>
          <div class="review_and_comment">
            <div class="review_rate m-5 grid grid-cols-2 items-center justify-center">
                <div class="">
                  <ul class="flex items-center">
                    <li><img src="/images/star.svg" class="w-10 h-10"></li>
                    <li><img src="/images/star.svg" class="w-10 h-10"></li>
                    <li><img src="/images/star.svg" class="w-10 h-10"></li>
                    <li><img src="/images/star-half-fill.svg" class="w-10 h-10"></li>
                    <li><img src="/images/star-no-fill.svg" class="w-10 h-10"></li>
                  </ul>
                </div>  
                <div class="badge">Rating...{{avgRating}}</div> 
            </div>
            <div class="bg-white shadow-md p-5">
              <div class="mt-5">
                <div class="form">
                  <div class="flex-auto w-full md-1 text-xs space-y-2">
                    <label class=" text-neutral-600 py-2">Add a Review</label>
                    <textarea class="h-28 w-full appearance-none block bg-gray-50 text-gray-600 border e"></textarea>
                  </div>
                </div>
              </div>
            </div>
            <button class="mt-2 m-3 bg-gray-600 px-5 py-2 text-sm shadow-md tracking-wider text-white rounded-full hover:bg-darkGrayishBlue hover:shadow-lg focus:outline-none">Post Review</button>
        </div>
      </li>
      <li class="bg-white rounded-lg shadow-xl">
        <div class="reviews">
          <ul>
            {{#each reviewPost.reviews}}
            <li class="p-2 text-sm">
              <div class="user_comment_name">{{user.username}}</div>
              <div class="comment_text">{{review_text}}</div>
            </li>
            {{/each}}
          </ul>
        </div>
      </li>
    </ul>
  </div>
</div>